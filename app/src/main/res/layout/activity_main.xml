<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="436dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Æggeur"
        android:background="#54b4e8"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Vælg Et Æg"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonSoft"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="148dp"
        android:text="Blød Kogt"
        app:backgroundTint="#54B4E8"
        app:layout_constraintEnd_toStartOf="@+id/buttonSmile"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSmile"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="148dp"
        android:text="Smilende"
        app:backgroundTint="#54B4E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Button
        android:id="@+id/buttonHard"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="148dp"
        android:text="Hård Kogt"
        app:backgroundTint="#54B4E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/buttonSmile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="504dp"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        android:background="#54b4e8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSmile" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="504dp"
        android:layout_height="5dp"
        android:layout_marginTop="68dp"
        android:background="#54b4e8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimer" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="269dp"
        android:layout_height="98dp"
        android:layout_marginTop="68dp"
        android:text="00:00"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="254dp"
        android:layout_height="82dp"
        android:layout_marginTop="104dp"
        android:text="Start"
        android:enabled="false"
        android:textSize="40sp"
        app:backgroundTint="#54B4E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Timer"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.64" />

</androidx.constraintlayout.widget.ConstraintLayout>